<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99363636">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_237sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:background="@drawable/background_white_corner_top"
        android:orientation="vertical">


        <com.bda.omnilibrary.views.SfTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/text_chi_tiet_thanh_toan_uu_dai"
            android:textAllCaps="true"
            android:textColor="@color/color_363636"
            android:textSize="@dimen/_10ssp"
            android:visibility="visible"
            app:type="bold" />


        <androidx.leanback.widget.HorizontalGridView
            android:id="@+id/vg_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:layout_marginVertical="0dp"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_11sdp"
            android:visibility="visible"
            app:rowHeight="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_11sdp"
            android:orientation="horizontal">

            <com.bda.omnilibrary.views.SfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_press"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/_6ssp"
                android:visibility="visible"
                app:type="medium" />

            <ImageView
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/ic_back_cirle" />

            <com.bda.omnilibrary.views.SfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:text="@string/text_to_turn"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/_6ssp"
                android:visibility="visible"
                app:type="medium" />

            <LinearLayout
                android:id="@+id/note_choose_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:background="@color/color_666666" />

                <com.bda.omnilibrary.views.SfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_press"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/_6ssp"
                    android:visibility="visible"
                    app:type="medium" />

                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="3dp"
                    android:src="@mipmap/ic_back_gray" />

                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="3dp"
                    android:src="@mipmap/ic_next_gray" />

                <com.bda.omnilibrary.views.SfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:text="@string/text_to_choose_list"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/_6ssp"
                    android:visibility="visible"
                    app:type="medium" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/note_go_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:background="@color/color_666666" />

                <com.bda.omnilibrary.views.SfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_press"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/_6ssp"
                    android:visibility="visible"
                    app:type="medium" />

                <ImageView
                    android:layout_width="@dimen/_7sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="3dp"
                    android:src="@mipmap/ic_ok" />

                <com.bda.omnilibrary.views.SfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:text="@string/text_to_go_to_cart"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/_6ssp"
                    android:visibility="visible"
                    app:type="medium" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>