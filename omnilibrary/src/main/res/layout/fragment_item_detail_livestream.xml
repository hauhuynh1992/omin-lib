<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_17sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_17sdp"
        app:cardBackgroundColor="@color/trans"
        app:cardCornerRadius="@dimen/_14sdp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/motionLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layoutDescription="@xml/fragment_item_detail_livestream_scene">

            <LinearLayout
                android:id="@+id/layout_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_11sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <ImageView
                        android:id="@+id/detail_image"
                        android:layout_width="@dimen/_106sdp"
                        android:layout_height="@dimen/_106sdp"
                        android:scaleType="fitXY" />

                </androidx.cardview.widget.CardView>


                <com.bda.omnilibrary.views.SfTextView
                    android:id="@+id/detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/color_484848"
                    android:textSize="@dimen/_8ssp"
                    app:type="medium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ln_tag_value_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:background="@drawable/background_lime"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.bda.omnilibrary.views.SfTextView
                            android:id="@+id/name_tag_value_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:textColor="@color/text_color_white"
                            android:textSize="@dimen/_6ssp"
                            app:type="bold" />

                    </LinearLayout>


                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/detail_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_1sdp"
                        android:textColor="@color/color_A4BF5E"
                        android:textSize="@dimen/_8ssp"
                        android:visibility="visible"
                        app:type="bold" />

                    <com.bda.omnilibrary.views.SfStrikeTextView
                        android:id="@+id/detail_list_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_1sdp"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/_6ssp"
                        android:visibility="visible"
                        app:type="medium" />

                </LinearLayout>

                <com.bda.omnilibrary.views.SfTextView
                    android:id="@+id/short_des_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:drawableStart="@mipmap/ic_tick_gray"
                    android:drawablePadding="@dimen/_4sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/_6ssp"
                    android:visibility="gone"
                    app:type="regular" />

                <com.bda.omnilibrary.views.SfTextView
                    android:id="@+id/short_des_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:drawableLeft="@mipmap/ic_tick_gray"
                    android:drawablePadding="@dimen/_4sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/_6ssp"
                    android:visibility="gone"
                    app:type="regular" />

                <com.bda.omnilibrary.views.SfTextView
                    android:id="@+id/short_des_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:drawableStart="@mipmap/ic_tick_gray"
                    android:drawablePadding="@dimen/_4sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/_6ssp"
                    android:visibility="gone"
                    app:type="regular" />

                <com.bda.omnilibrary.views.SfTextView
                    android:id="@+id/short_des_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:drawableLeft="@mipmap/ic_tick_gray"
                    android:drawablePadding="@dimen/_4sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/_6ssp"
                    android:visibility="gone"
                    app:type="regular" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_info">

                <RelativeLayout
                    android:id="@+id/bn_detail_quickpay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_19sdp"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:background="@drawable/bn_fast_pay_live_stream_selector"
                    android:nextFocusLeft="@id/bn_detail_quickpay"
                    android:nextFocusRight="@id/bn_detail_quickpay"
                    android:nextFocusUp="@id/bn_detail_quickpay">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_bn_detail_quickpay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_fast" />

                        <com.bda.omnilibrary.views.SfTextView
                            android:id="@+id/text_bn_detail_quickpay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:text="Thanh toán nhanh"
                            android:textColor="@color/color_A1B753"
                            android:textSize="@dimen/_6ssp"
                            android:visibility="visible"
                            app:type="medium" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/bn_add_to_cart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_19sdp"
                        android:layout_marginStart="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_toStartOf="@+id/bn_favourite"
                        android:background="@drawable/bn_detail_livestream_selector"
                        android:nextFocusLeft="@id/bn_add_to_cart"
                        android:nextFocusUp="@id/bn_detail_quickpay">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_bn_add_to_cart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@mipmap/ic_plus_gray_detail" />

                            <com.bda.omnilibrary.views.SfTextView
                                android:id="@+id/text_bn_add_to_cart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:text="Thêm vào giỏ hàng"
                                android:textColor="@color/color_484848"
                                android:textSize="@dimen/_6ssp"
                                android:visibility="visible"
                                app:type="medium" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/bn_favourite"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_19sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_14sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/bn_detail_livestream_selector"
                        android:nextFocusLeft="@id/bn_add_to_cart"
                        android:nextFocusRight="@id/bn_favourite"
                        android:nextFocusUp="@id/bn_detail_quickpay">

                        <ImageView
                            android:id="@+id/image_bn_favourite"
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/ic_fouverite_livestream" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bn_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_19sdp"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:background="@drawable/bn_view_detail_live_stream"
                    android:nextFocusLeft="@id/bn_detail">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <com.bda.omnilibrary.views.SfTextView
                            android:id="@+id/text_bn_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xem chi tiết sản phẩm"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/_6ssp"
                            android:visibility="visible"
                            app:type="medium" />
                    </LinearLayout>
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/detail_supplier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:layout_marginBottom="@dimen/_11sdp"
                    android:background="@drawable/item_white_border_gray"
                    android:nextFocusLeft="@id/detail_supplier"
                    android:nextFocusRight="@id/detail_supplier"
                    android:nextFocusDown="@id/detail_supplier"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp">

                        <com.bda.omnilibrary.views.SfTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_nha_cung_cap"
                            android:textColor="@color/color_484848"
                            android:textSize="@dimen/_8ssp"
                            android:visibility="visible"
                            app:type="bold" />

                        <ImageView
                            android:id="@+id/ic_focus_supplier"
                            android:layout_width="@dimen/_3sdp"
                            android:layout_height="@dimen/_5sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_right_black"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/container_supplier"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/item_live_stream_supplier"
                            android:padding="@dimen/_5sdp">

                            <ImageView
                                android:id="@+id/image_supplier"
                                android:layout_width="@dimen/_27sdp"
                                android:layout_height="@dimen/_17sdp"
                                android:scaleType="center" />

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/ic_detail_tick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_minus4sdp"
                            android:layout_toEndOf="@+id/container_supplier"
                            android:src="@mipmap/ic_tick_supplier" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_toEndOf="@+id/ic_detail_tick"
                            android:orientation="vertical">

                            <com.bda.omnilibrary.views.SfTextView
                                android:id="@+id/detail_supplier_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/color_484848"
                                android:textSize="@dimen/_6ssp"
                                android:visibility="visible"
                                app:type="bold" />

                            <com.bda.omnilibrary.views.SfTextView
                                android:id="@+id/supplier_number_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_C6C6C6"
                                android:textSize="@dimen/_6ssp"
                                android:visibility="visible"
                                app:type="bold" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.motion.widget.MotionLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
