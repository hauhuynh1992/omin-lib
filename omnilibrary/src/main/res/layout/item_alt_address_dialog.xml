<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:SfView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/layout_invoice_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/round_background_new">

        <RelativeLayout
            android:id="@+id/rl_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_11sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_7sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_70sdp"
                android:background="@null"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/ll_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/tv_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_uid"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:text="@string/ho_va_ten_2_cham"
                        android:textColor="@color/title_black_0A0F06"
                        android:textSize="@dimen/_7ssp"
                        SfView:type="regular" />


                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_uid"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_toRightOf="@+id/tv_name_title"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:maxLength="30"
                        android:textColor="@color/title_black_black"
                        android:textSize="@dimen/_8ssp"
                        SfView:type="bold" />

                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/tv_address_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_toRightOf="@+id/tv_name"
                        android:background="@drawable/background_blue_focus"
                        android:paddingLeft="@dimen/_4sdp"
                        android:paddingTop="@dimen/_1sdp"
                        android:paddingRight="@dimen/_4sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="@string/dia_chi_mac_dinh"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_6ssp"
                        SfView:type="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp">

                    <com.bda.omnilibrary.views.SfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/text_phone"
                        android:textColor="@color/title_black_0A0F06"
                        android:textSize="@dimen/_7ssp"
                        SfView:type="regular" />


                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_uid"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/title_black_black"
                        android:textSize="@dimen/_7ssp"
                        SfView:type="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="horizontal">

                    <com.bda.omnilibrary.views.SfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/dia_chi"
                        android:textColor="@color/title_black_0A0F06"
                        android:textSize="@dimen/_7ssp"
                        SfView:type="regular" />


                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/title_black_black"
                        android:textSize="@dimen/_7ssp"
                        SfView:type="bold" />
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_minus6sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/bn_delete"
                android:layout_width="@dimen/_37sdp"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginRight="@dimen/_minus14sdp"
                android:background="@drawable/btn_omi_buttn_square_selector"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="0dp">

                <com.bda.omnilibrary.views.SfTextView
                    android:id="@+id/text_delete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="@dimen/_2sdp"
                    android:paddingRight="@dimen/_2sdp"
                    android:text="@string/text_xoa"
                    android:textAllCaps="true"
                    android:textColor="@drawable/selector_button_header"
                    android:textSize="@dimen/_6ssp"
                    app:type="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bn_choose"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_37sdp"
                android:background="@drawable/btn_omi_buttn_small_selector"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="0dp">

                <com.bda.omnilibrary.views.SfTextView
                    android:id="@+id/text_bn_choose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="center_horizontal"
                    android:text="@string/chon"
                    android:textAllCaps="true"
                    android:textColor="@drawable/selector_button_header"
                    android:textSize="@dimen/_6ssp"
                    app:type="bold" />

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>