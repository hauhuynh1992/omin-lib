<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:sfView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        android:background="@drawable/gradiant_green" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="@dimen/_1dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:paddingLeft="@dimen/_25sdp"
            android:paddingRight="@dimen/_25sdp"
            android:paddingBottom="@dimen/_3sdp">

            <LinearLayout
                android:id="@+id/ll_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <com.bda.omnilibrary.views.SfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/ic_red_remote"
                    android:drawablePadding="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:text="@string/nhan"
                    android:textColor="@color/title_black"
                    android:textSize="@dimen/_8ssp"
                    sfView:type="medium" />

                <com.bda.omnilibrary.views.SfTextView
                    android:id="@+id/txt_toggle_assistant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:drawablePadding="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:text="@string/de_mo_voice_assistant"
                    android:textColor="@color/title_black"
                    android:textSize="@dimen/_8ssp"
                    sfView:type="medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/_18sdp"
                android:layout_toLeftOf="@+id/ll_hotline">

                <ImageView
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:background="@drawable/ic_facebook" />

                <com.bda.omnilibrary.views.SfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:drawablePadding="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:text="@string/short_facebook"
                    android:textColor="@color/title_black"
                    android:textSize="@dimen/_8ssp"
                    sfView:type="medium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_hotline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:background="@drawable/ic_call" />

                <com.bda.omnilibrary.views.SfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:drawablePadding="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:text="@string/_hotline"
                    android:textColor="@color/title_black"
                    android:textSize="@dimen/_8ssp"
                    sfView:type="medium" />

                <com.bda.omnilibrary.views.SfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:drawablePadding="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:text="@string/_19001900"
                    android:textColor="@color/title_green_2E9B93"
                    android:textSize="@dimen/_8ssp"
                    sfView:type="bold" />

            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>