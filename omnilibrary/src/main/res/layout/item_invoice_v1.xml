<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:sfView="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_selector"
    android:padding="@dimen/_4sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_transparent"
        android:paddingBottom="@dimen/_2sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_thumbnail"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:elevation="0dp"
            card_view:cardElevation="0dp">

            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <com.bda.omnilibrary.views.SfTextView
            android:id="@+id/name"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_toRightOf="@+id/cv_thumbnail"

            android:textColor="@color/title_black"
            android:textSize="@dimen/_8ssp"
            sfView:type="regular" />

        <com.bda.omnilibrary.views.SfTextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_195sdp"
            android:textAlignment="center"
            android:textColor="@color/title_black"
            android:textSize="@dimen/_8ssp"
            sfView:type="regular" />

        <com.bda.omnilibrary.views.SfTextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/title_black"
            android:textSize="@dimen/_8ssp"
            sfView:type="regular" />

    </RelativeLayout>
</RelativeLayout>