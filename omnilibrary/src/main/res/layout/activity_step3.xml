<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_product_detail"
    tools:context=".ui.orderDetail.OrderActivity">

    <RelativeLayout
        android:id="@+id/step"
        android:layout_width="@dimen/_288sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image_header">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_248sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/milestone_step_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.bda.omnilibrary.views.SfTextView
                android:id="@+id/step_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="@string/milestone_order_information"
                android:textAlignment="center"
                android:textColor="@color/color_41AE96"
                android:textSize="@dimen/_7ssp"
                app:type="bold" />

            <com.bda.omnilibrary.views.SfTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:maxLines="1"
                android:text="@string/milestone_payment_method"
                android:textAlignment="center"
                android:textColor="@color/color_41AE96"
                android:textSize="@dimen/_7ssp"
                app:type="bold" />

            <com.bda.omnilibrary.views.SfTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:maxLines="1"
                android:text="@string/milestone_result"
                android:textAlignment="center"
                android:textColor="@color/color_41AE96"
                android:textSize="@dimen/_7ssp"
                app:type="bold" />

        </LinearLayout>


    </RelativeLayout>


    <include
        android:id="@+id/image_header"
        layout="@layout/item_header_screen" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_104sdp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@mipmap/image_success_pay" />

        <com.bda.omnilibrary.views.SfTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/pay_success_"
            android:textColor="@color/title_black_black"
            android:textSize="@dimen/_10ssp"
            app:type="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.bda.omnilibrary.views.SfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/text_ma_don_hang"
                android:textColor="@color/title_black_black"
                android:textSize="@dimen/_8ssp"
                app:type="regular" />

            <com.bda.omnilibrary.views.SfTextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_2sdp"
                android:textColor="@color/color_blue_end"
                android:textSize="@dimen/_8ssp"
                app:type="regular" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/_20sdp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@color/start_color" />

        <com.bda.omnilibrary.views.SfTextView
            android:id="@+id/thanks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/text_thanks"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/_6ssp"
            app:type="regular" />

        <com.bda.omnilibrary.views.SfTextView
            android:id="@+id/failed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/text_failed"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/_6ssp"
            android:visibility="gone"
            app:type="regular" />

        <LinearLayout
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.bda.omnilibrary.views.SfTextView
                android:id="@+id/contact_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/text_contact_1"
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/_6ssp"
                app:type="regular" />

            <com.bda.omnilibrary.views.SfTextView
                android:id="@+id/contact_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_1sdp"
                android:text="@string/text_contact_2"
                android:textColor="@color/color_blue_start"
                android:textSize="@dimen/_6ssp"
                app:type="regular" />

            <com.bda.omnilibrary.views.SfTextView
                android:id="@+id/contact_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_1sdp"
                android:text="@string/text_contact_3"
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/_6ssp"
                app:type="regular" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_4sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/bn_try_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_minus2sdp"
                android:nextFocusLeft="@id/bn_voucher"
                android:nextFocusUp="@id/bn_voucher"
                android:nextFocusDown="@id/bn_voucher"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/item_bn_try_again"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/color_transparent"
                    android:outlineSpotShadowColor="@color/text_black_70"
                    android:theme="@style/ItemStyle"
                    app:cardBackgroundColor="@color/color_transparent"
                    app:cardCornerRadius="@dimen/_3sdp"
                    app:cardElevation="@dimen/_1sdp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/text_bn_try_again"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/background_button_header_collection"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="@string/text_thu_lai"
                        android:textAllCaps="true"
                        android:textColor="@drawable/selector_button_header"
                        android:textSize="@dimen/_7ssp"
                        app:type="bold" />

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bn_continue_shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:focusedByDefault="true"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/item_bn_continue_shopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/color_transparent"
                    android:outlineAmbientShadowColor="@color/trans"
                    android:outlineSpotShadowColor="@color/text_black_70"
                    android:theme="@style/ItemStyle"
                    app:cardBackgroundColor="@color/color_transparent"
                    app:cardCornerRadius="@dimen/_3sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/text_bn_continue_shopping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/background_button_header_collection"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="@string/text_tiep_tuc_mua_sam"
                        android:textAllCaps="true"
                        android:textColor="@drawable/selector_button_header"
                        android:textSize="@dimen/_7ssp"
                        app:type="bold" />

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>