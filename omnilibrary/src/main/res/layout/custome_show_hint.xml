<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sfView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.bda.omnilibrary.views.SfTextView
        android:id="@+id/tv_custom_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_action_1"
        android:layout_centerHorizontal="true"
        android:text="@string/click_to_voice"
        android:textColor="@color/title_white"
        android:textSize="@dimen/_14ssp"
        sfView:type="medium" />


    <com.bda.omnilibrary.views.SfTextView
        android:id="@+id/btn_action_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@null"
        android:text="@string/ok_to_exit"
        android:textColor="@color/title_white"
        android:textSize="@dimen/_14ssp"
        sfView:type="medium" />

</RelativeLayout>