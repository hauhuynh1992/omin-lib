<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/bg_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:background="@drawable/background_header_child">

        <RelativeLayout
            android:id="@+id/bn_header_back"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_bn_back_header"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@id/bn_header_back"
            android:orientation="vertical"
            android:padding="0dip">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_back" />

                <com.bda.omnilibrary.views.SfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/text_quay_lai_low_cap"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_6ssp"
                    app:type="bold" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_2sdp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_72sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_49sdp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_logo_omni" />

            <com.bda.omnilibrary.views.SfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_49sdp"
                android:singleLine="true"
                android:text="@string/text_hotline_support"
                android:textColor="@color/gray_AAAAAA"
                android:textSize="10sp"
                app:type="medium" />

        </LinearLayout>

        <com.bda.omnilibrary.views.SfTextView
            android:id="@+id/text_order"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/bn_search"
            android:maxLines="3"
            android:textAlignment="textEnd"
            android:textColor="@color/start_color"
            android:textSize="@dimen/_6ssp"
            app:autoSizeMaxTextSize="@dimen/_80sdp"
            app:autoSizeMinTextSize="@dimen/_60sdp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:type="medium" />

        <LinearLayout
            android:id="@+id/bn_search"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_toStartOf="@+id/bn_account"
            android:background="@drawable/button_item_cart_selector"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="0dip">

            <RelativeLayout
                android:id="@+id/ln_bn_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_bn_search"
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:src="@mipmap/ic_search_gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/ic_bn_search"
                    android:orientation="vertical">

                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/txt_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tim_kiem"
                        android:textColor="@drawable/selector_text_gray_header"
                        android:textSize="@dimen/_6ssp"
                        app:type="medium" />

                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/txt_search_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_minus1sdp"
                        android:singleLine="true"
                        android:text="@string/san_pham_low"
                        android:textColor="@drawable/selector_button_header"
                        android:textSize="@dimen/_7ssp"
                        app:type="bold" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bn_account"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_toStartOf="@+id/bn_cart"
            android:background="@drawable/button_item_cart_selector"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="0dip">

            <RelativeLayout
                android:id="@+id/ln_bn_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_account_top"
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:src="@mipmap/ic_account_gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/ic_account_top"
                    android:orientation="vertical">

                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/txt_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tai_khoan_low"
                        android:textColor="@drawable/selector_text_gray_header"
                        android:textSize="@dimen/_6ssp"
                        app:type="medium" />

                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/txt_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_minus1sdp"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textColor="@drawable/selector_button_header"
                        android:textSize="@dimen/_7ssp"
                        app:type="bold" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bn_cart"
            android:layout_width="@dimen/_72sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_6sdp"
            android:background="@drawable/button_item_cart_selector"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@+id/bn_store"
            android:orientation="vertical"
            android:padding="0dp">


            <RelativeLayout
                android:id="@+id/ln_cart_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/image_cart"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_style_1_cart_gray" />

                <com.bda.omnilibrary.views.SfTextView
                    android:id="@+id/txt_quantity"
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_minus3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toEndOf="@+id/image_cart"
                    android:background="@drawable/selector_indicator_cart"
                    android:gravity="center"
                    android:textColor="@color/title_white"
                    android:textSize="@dimen/_5sdp"
                    app:type="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_toEndOf="@+id/txt_quantity"
                    android:orientation="vertical">

                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/txt_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gio_hang_low"
                        android:textColor="@drawable/selector_text_gray_header"
                        android:textSize="@dimen/_6ssp"
                        app:type="medium" />

                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/txt_header_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@drawable/selector_text_price_header"
                        android:textSize="@dimen/_7ssp"
                        app:type="bold" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>