<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:sfView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/color_transparent"
        android:elevation="0dp"
        card_view:cardBackgroundColor="@color/color_transparent"
        card_view:cardCornerRadius="@dimen/_6sdp"
        card_view:cardElevation="@dimen/_1sdp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_65sdp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.bda.omnilibrary.views.SfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_ban_con"
                    android:textColor="@color/title_black_black"
                    android:textSize="@dimen/_9sdp"
                    sfView:type="medium" />

                <com.bda.omnilibrary.views.SfTextView
                    android:id="@+id/lb_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 00 : 00 "
                    android:textColor="@color/title_red_ff424e"
                    android:textSize="@dimen/_9sdp"
                    sfView:type="medium" />

                <com.bda.omnilibrary.views.SfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_de_thanh_toan_don_hang"
                    android:textColor="@color/title_black_black"
                    android:textSize="@dimen/_9sdp"
                    sfView:type="medium" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/bn_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/item_bn_accept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/color_transparent"
                        android:outlineAmbientShadowColor="@color/trans"
                        android:outlineSpotShadowColor="@color/text_black_70"
                        android:theme="@style/ItemStyle"
                        sfView:cardBackgroundColor="@color/color_transparent"
                        sfView:cardCornerRadius="@dimen/_3sdp"
                        sfView:cardElevation="@dimen/_2sdp"
                        sfView:cardPreventCornerOverlap="true"
                        sfView:cardUseCompatPadding="true">

                        <com.bda.omnilibrary.views.SfTextView
                            android:id="@+id/text_bn_accept"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/background_button_collection_focus"
                            android:gravity="center"
                            android:text="@string/ok"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_7ssp"
                            sfView:type="medium" />

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>