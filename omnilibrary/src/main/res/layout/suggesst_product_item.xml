<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sfView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_con"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_product_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@color/color_transparent"
        android:outlineAmbientShadowColor="@color/trans"
        android:outlineSpotShadowColor="@color/text_black_70"
        android:theme="@style/ItemStyle"
        app:cardBackgroundColor="@color/color_transparent"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="@dimen/_102sdp"
            android:layout_height="@dimen/_144sdp"
            android:background="@color/color_product_background">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/layout_category"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_102sdp">

                    <com.bda.omnilibrary.views.SfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/app_name"
                        android:textColor="@color/title_grey_a6a6a6"
                        android:textSize="@dimen/_10ssp"
                        app:type="bold" />


                    <ImageView
                        android:id="@+id/image_category"
                        android:layout_width="@dimen/_102sdp"
                        android:layout_height="@dimen/_102sdp"
                        android:scaleType="centerCrop" />

                    <RelativeLayout
                        android:id="@+id/rl_posistion"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/_6sdp"
                        android:background="@mipmap/ic_tag_posistion">

                        <com.bda.omnilibrary.views.SfTextView
                            android:id="@+id/tv_posistion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="@dimen/_4sdp"
                            android:text="1"
                            android:textColor="@color/title_white"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            sfView:type="bold">

                        </com.bda.omnilibrary.views.SfTextView>

                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/tv_assets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />


                    <ImageView
                        android:id="@+id/img_freeship"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_category"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:orientation="vertical">

                    <com.bda.omnilibrary.views.flowTextView.FlowTextView
                        android:id="@+id/flow_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        app:maxLines="2"
                        app:textColor="@color/text_color_dark"
                        app:textSize="@dimen/_8ssp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ln_tag_value_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:background="@drawable/background_name_tag"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/ic_tag_value_1"
                                    android:layout_width="@dimen/_6sdp"
                                    android:layout_height="@dimen/_7sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:scaleType="fitCenter"
                                    android:src="@mipmap/ic_down_tag" />

                                <com.bda.omnilibrary.views.SfTextView
                                    android:id="@+id/name_tag_value_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    android:textColor="@color/text_color_white"
                                    android:textSize="@dimen/_7ssp"
                                    app:type="bold" />

                            </LinearLayout>


                            <com.bda.omnilibrary.views.SfTextView
                                android:id="@+id/name_tag_value_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:background="@drawable/background_name_tag"
                                android:paddingLeft="@dimen/_3sdp"
                                android:paddingRight="@dimen/_3sdp"
                                android:textColor="@color/text_color_white"
                                android:textSize="@dimen/_7ssp"
                                android:visibility="gone"
                                app:type="bold" />

                        </LinearLayout>
                    </com.bda.omnilibrary.views.flowTextView.FlowTextView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                        <com.bda.omnilibrary.views.SfTextView
                            android:id="@+id/sale_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="bottom"
                            android:textColor="@color/color_41AE96"
                            android:textSize="@dimen/_9ssp"
                            app:type="bold" />

                        <com.bda.omnilibrary.views.SfStrikeTextView
                            android:id="@+id/list_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:maxLines="1"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/_5ssp"
                            android:visibility="visible"
                            app:type="regular" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>