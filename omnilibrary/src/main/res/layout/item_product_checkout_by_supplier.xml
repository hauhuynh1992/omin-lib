<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/supplier_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_11sdp">

            <com.bda.omnilibrary.views.SfTextView
                android:id="@+id/supplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_toStartOf="@+id/product_count"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/text_ten_nha_cung_cap"
                android:textColor="@color/color_363636"
                android:textSize="@dimen/_6ssp"
                android:visibility="visible"
                card_view:type="bold" />

            <com.bda.omnilibrary.views.SfTextView
                android:id="@+id/product_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/text_so_sp"
                android:textColor="@color/color_41AE96"
                android:textSize="@dimen/_6ssp"
                android:visibility="visible"
                card_view:type="bold" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_11sdp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:elevation="0dp"
                card_view:cardCornerRadius="@dimen/_3sdp"
                card_view:cardElevation="0dp">

                <ImageView
                    android:id="@+id/img_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.bda.omnilibrary.views.SfTextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_11sdp"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/title_black_0A0F06"
                    android:textSize="@dimen/_7ssp"
                    card_view:type="regular" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_11sdp"
            android:background="@color/color_D6D6D6" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_more_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_11sdp"
        android:layout_marginEnd="@dimen/_11sdp"
        android:visibility="gone">

        <com.bda.omnilibrary.views.SfTextView
            android:id="@+id/dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="..."
            android:textColor="@color/color_363636"
            android:textSize="@dimen/_6ssp"
            android:visibility="visible"
            card_view:type="bold" />

        <com.bda.omnilibrary.views.SfTextView
            android:id="@+id/more_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dots"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/text_tong_sp"
            android:textColor="@color/color_363636"
            android:textSize="@dimen/_6ssp"
            android:visibility="visible"
            card_view:type="bold" />

        <com.bda.omnilibrary.views.SfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dots"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/text_xem_chi_tiet"
            android:textColor="@color/color_41AE96"
            android:textSize="@dimen/_6ssp"
            android:visibility="visible"
            card_view:type="bold" />

    </RelativeLayout>


</LinearLayout>