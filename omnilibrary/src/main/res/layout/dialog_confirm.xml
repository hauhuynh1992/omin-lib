<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:sfView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/color_transparent"
        card_view:cardBackgroundColor="@color/color_transparent"
        card_view:cardCornerRadius="@dimen/_6sdp"
        card_view:cardElevation="@dimen/_1sdp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <com.bda.omnilibrary.views.SfTextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/ask_to_use_voucher"
                    android:textColor="@color/title_black_black"
                    android:textSize="@dimen/_8sdp"
                    sfView:type="medium" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">


                <!--<com.bda.omnilibrary.views.SfButton
                android:id="@+id/bn_no"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/main_button_selector"
                android:letterSpacing="0.05"
                android:text="@string/no"
                android:textAllCaps="false"
                android:textColor="@color/title_white"
                android:textSize="@dimen/_8ssp"
                sfView:type="medium" />-->
                <LinearLayout
                    android:id="@+id/bn_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/item_bn_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/color_transparent"
                        android:outlineAmbientShadowColor="@color/trans"
                        android:outlineSpotShadowColor="@color/text_black_70"
                        android:theme="@style/ItemStyle"
                        sfView:cardBackgroundColor="@color/color_transparent"
                        sfView:cardCornerRadius="@dimen/_3sdp"
                        sfView:cardElevation="@dimen/_2sdp"
                        sfView:cardPreventCornerOverlap="true"
                        sfView:cardUseCompatPadding="true">

                        <com.bda.omnilibrary.views.SfTextView
                            android:id="@+id/text_bn_no"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/background_button_header_collection"
                            android:gravity="center"
                            android:text="@string/no"
                            android:textAllCaps="true"
                            android:textColor="@drawable/selector_button_header"
                            android:textSize="@dimen/_7ssp"
                            sfView:type="medium" />

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!--<com.bda.omnilibrary.views.SfButton
                android:id="@+id/bn_yes"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/main_button_selector"
                android:letterSpacing="0.05"
                android:text="@string/yes"
                android:textAllCaps="false"
                android:textColor="@color/title_white"
                android:textSize="@dimen/_8ssp"
                sfView:type="medium" />-->

                <LinearLayout
                    android:id="@+id/bn_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/item_bn_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/color_transparent"
                        android:outlineAmbientShadowColor="@color/trans"
                        android:outlineSpotShadowColor="@color/text_black_70"
                        android:theme="@style/ItemStyle"
                        sfView:cardBackgroundColor="@color/color_transparent"
                        sfView:cardCornerRadius="@dimen/_3sdp"
                        sfView:cardElevation="@dimen/_2sdp"
                        sfView:cardPreventCornerOverlap="true"
                        sfView:cardUseCompatPadding="true">

                        <com.bda.omnilibrary.views.SfTextView
                            android:id="@+id/text_bn_yes"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/background_button_header_collection"
                            android:gravity="center"
                            android:text="@string/yes"
                            android:textAllCaps="true"
                            android:textColor="@drawable/selector_button_header"
                            android:textSize="@dimen/_7ssp"
                            sfView:type="medium" />

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>