<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_content_addcart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_product_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginRight="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:background="@color/color_transparent"
        app:cardBackgroundColor="@color/color_transparent"
        app:cardElevation="@dimen/_1sdp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/title_grey_f4f4f4">

            <com.bda.omnilibrary.views.SfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/app_name"
                android:textColor="@color/title_grey_a6a6a6"
                android:textSize="@dimen/_2ssp"
                app:type="bold" />

            <ImageView
                android:id="@+id/image_preview_image"
                android:layout_width="@dimen/_31sdp"
                android:layout_height="@dimen/_31sdp"
                android:scaleType="centerCrop" />

            <!--<ImageView
                android:id="@+id/ic_play"
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play" />-->

            <View
                android:id="@+id/view_green"
                android:layout_width="@dimen/_31sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/image_preview_image"
                android:background="@color/title_green_2E9B93"
                android:visibility="gone" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>