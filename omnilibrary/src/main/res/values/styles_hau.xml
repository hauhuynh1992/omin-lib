<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TransparentSelectorButton" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@drawable/key_color_selector</item>
        <item name="android:background">@drawable/main_button_selector</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style name="HeaderText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/title_black</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="ConentText">
        <item name="android:background">@drawable/border_fill_background</item>
        <item name="android:paddingLeft">@dimen/_8sdp</item>
        <item name="android:paddingRight">@dimen/_8sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>