<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/image_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/bg_header_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:background="@drawable/background_header">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_2sdp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_72sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_11sdp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_logo_omni" />

            <com.bda.omnilibrary.views.SfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_11sdp"
                android:singleLine="true"
                android:text="@string/text_hotline_support"
                android:textColor="@color/gray_AAAAAA"
                android:textSize="10sp"
                app:type="medium" />
        </LinearLayout>

        <com.bda.omnilibrary.views.SfTextView
            android:id="@+id/text_order"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/bn_search"
            android:maxLines="3"
            android:textAlignment="textEnd"
            android:textColor="@color/start_color"
            android:textSize="@dimen/_6ssp"
            app:autoSizeMaxTextSize="@dimen/_80sdp"
            app:autoSizeMinTextSize="@dimen/_60sdp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:type="medium" />

        <LinearLayout
            android:id="@+id/bn_assistant"
            android:layout_width="@dimen/_71sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toStartOf="@+id/bn_search"
            android:background="@drawable/button_item_cart_selector"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@id/bn_assistant"
            android:orientation="vertical"
            android:padding="0dip"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/ln_bn_assistant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_bn_assistant"
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:src="@mipmap/ic_voice_assistant" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/ic_bn_assistant"
                    android:orientation="vertical">

                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/txt_assistant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tro_ly_thong_minh"
                        android:textColor="@drawable/selector_text_gray_header"
                        android:textSize="@dimen/_6ssp"
                        app:type="medium" />

                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/txt_assistant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_minus1sdp"
                        android:singleLine="true"
                        android:text="@string/voice_assistant"
                        android:textColor="@drawable/selector_button_header"
                        android:textSize="@dimen/_7ssp"
                        app:type="bold" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bn_search"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_toStartOf="@+id/bn_account"
            android:background="@drawable/button_item_cart_selector"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="0dip">

            <RelativeLayout
                android:id="@+id/ln_bn_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_bn_search"
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:src="@mipmap/ic_search_gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/ic_bn_search"
                    android:orientation="vertical">

                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/txt_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tim_kiem"
                        android:textColor="@drawable/selector_text_gray_header"
                        android:textSize="@dimen/_6ssp"
                        app:type="medium" />

                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/txt_search_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_minus1sdp"
                        android:singleLine="true"
                        android:text="@string/san_pham_low"
                        android:textColor="@drawable/selector_button_header"
                        android:textSize="@dimen/_7ssp"
                        app:type="bold" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bn_account"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_toStartOf="@+id/bn_cart"
            android:background="@drawable/button_item_cart_selector"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="0dip">

            <RelativeLayout
                android:id="@+id/ln_bn_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_account_top"
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:src="@mipmap/ic_account_gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/ic_account_top"
                    android:orientation="vertical">

                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/txt_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tai_khoan_low"
                        android:textColor="@drawable/selector_text_gray_header"
                        android:textSize="@dimen/_6ssp"
                        app:type="medium" />

                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/txt_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_minus1sdp"
                        android:singleLine="true"
                        android:textAllCaps="false"
                        android:textColor="@drawable/selector_button_header"
                        android:textSize="@dimen/_7ssp"
                        app:type="bold" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bn_cart"
            android:layout_width="@dimen/_72sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_6sdp"
            android:background="@drawable/button_item_cart_selector"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="0dp">


            <RelativeLayout
                android:id="@+id/ln_cart_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/image_cart"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_style_1_cart_gray" />

                <com.bda.omnilibrary.views.SfTextView
                    android:id="@+id/txt_quantity"
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_minus3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toEndOf="@+id/image_cart"
                    android:background="@drawable/selector_indicator_cart"
                    android:gravity="center"
                    android:textColor="@color/title_white"
                    android:textSize="@dimen/_5sdp"
                    app:type="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_toEndOf="@+id/txt_quantity"
                    android:orientation="vertical">

                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/txt_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gio_hang_low"
                        android:textColor="@drawable/selector_text_gray_header"
                        android:textSize="@dimen/_6ssp"
                        app:type="medium" />

                    <com.bda.omnilibrary.views.SfTextView
                        android:id="@+id/txt_header_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/text_0_d"
                        android:textColor="@drawable/selector_text_price_header"
                        android:textSize="@dimen/_7ssp"
                        app:type="bold" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rl_imageSlider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bg_header_home"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@color/color_transparent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:outlineAmbientShadowColor="@color/trans"
        android:outlineSpotShadowColor="@color/text_black_70"
        android:theme="@style/ItemStyle"
        app:cardBackgroundColor="@color/color_transparent"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="@dimen/_483sdp"
            android:layout_height="@dimen/_151sdp">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/homeSlider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false" />

            <com.bda.omnilibrary.views.DotsIndicator
                android:id="@+id/dots"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/_7sdp"
                android:focusable="false"
                app:dot_height="@dimen/_6sdp"
                app:dot_tint="@color/trans"
                app:dot_width="@dimen/_6sdp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>