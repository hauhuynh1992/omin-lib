<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused and not pressed -->
    <item android:color="@color/text_yellow" android:state_focused="true" android:state_pressed="false" />

    <!-- Focused and pressed -->
    <item android:color="@color/text_yellow" android:state_focused="true" android:state_pressed="true" />

    <!-- Unfocused and pressed -->
    <item android:color="@color/text_yellow" android:state_focused="false" android:state_pressed="true" />


    <item android:color="@color/text_yellow" android:state_selected="true" />

    <!-- Default color -->
    <item android:color="@color/color_41AE96" />
</selector>