<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:bottom="@dimen/_2sdp"
                android:left="@dimen/_2sdp"
                android:right="@dimen/_2sdp"
                android:top="@dimen/_1sdp" />

            <solid android:color="#0D2E9B93" />

            <corners android:radius="@dimen/_3sdp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="@dimen/_2sdp"
                android:left="@dimen/_1sdp"
                android:right="@dimen/_1sdp"
                android:top="@dimen/_1sdp" />

            <solid android:color="#1A2E9B93" />

            <corners android:radius="@dimen/_3sdp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="@dimen/_3sdp"
                android:left="@dimen/_2sdp"
                android:right="@dimen/_2sdp"
                android:top="@dimen/_1sdp" />

            <solid android:color="#262E9B93" />

            <corners android:radius="@dimen/_3sdp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="@dimen/_2sdp"
                android:left="@dimen/_1sdp"
                android:right="@dimen/_1sdp"
                android:top="@dimen/_1sdp" />

            <solid android:color="#332E9B93" />

            <corners android:radius="@dimen/_3sdp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="@dimen/_3sdp"
                android:left="@dimen/_2sdp"
                android:right="@dimen/_2sdp"
                android:top="@dimen/_1sdp" />

            <solid android:color="#4D2E9B93" />

            <corners android:radius="@dimen/_3sdp" />
        </shape>
    </item>

    <!-- Background -->

    <item>
        <shape>
            <padding
                android:bottom="@dimen/_5sdp"
                android:left="@dimen/_5sdp"
                android:right="@dimen/_5sdp"
                android:top="@dimen/_4sdp" />

            <stroke
                android:width="@dimen/_3sdp"
                android:color="@color/start_color" />

            <corners android:radius="@dimen/_6sdp" />
        </shape>
    </item>


    <item>
        <shape>
            <solid android:color="@color/color_item_background" />
            <corners android:radius="@dimen/_6sdp" />
        </shape>
    </item>

</layer-list>